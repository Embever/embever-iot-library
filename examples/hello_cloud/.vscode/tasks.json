{   
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Echo vars",
            "command": "echo",
            "args": [
                "${env:USERNAME}",
                "workspaceFolder = ${workspaceFolder}",
                "arduino_avr_path = ${env:AVR_BASE_SOURCE}"
            ],
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--output-dir",
                "${workspaceFolder}/build",
                "-b",
                "arduino:avr:nano:cpu=${config:ARDUINO_BOOTLOADER_VARIANT}",
                "--warnings", "all"
            ],
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build For Debug",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--optimize-for-debug",
                "--output-dir",
                "${workspaceFolder}/build",
                "-b",
                "arduino:avr:nano:cpu=${config:ARDUINO_BOOTLOADER_VARIANT}"
            ],
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Flash with Arduino bootloader",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "upload",
                "-v",
                "--input-dir",
                "${workspaceFolder}/build",
                "-p",
                "${config:ARDUINO_SERIAL_PORT}",
                "-b",
                "arduino:avr:nano:cpu=${config:ARDUINO_BOOTLOADER_VARIANT}",
            ],
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Flash with Usbtiny ISP",
            "type": "shell",
            "command": "${config:ARDUINO_AVRDUDE_PATH}/bin/avrdude -p atmega328p -c usbtiny -C ${config:ARDUINO_AVRDUDE_PATH}/etc/avrdude.conf -V -U flash:w:${workspaceFolder}/build/${config:ARDUINO_SKETCH_NAME}.hex:i",
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Flash with Usbtiny DWIRE",
            "type": "shell",
            "command": "echo l ${workspaceFolder}/build/${config:ARDUINO_SKETCH_NAME}.elf | ${config:DWIRE_EXECUTABLE} device usbtiny1",
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Flash with Usbtiny DWIRE",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Flash with Usbtiny DWIRE"
            ],
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Serial monitor",
            "type": "shell",
            "command": "minicom -D ${config:ARDUINO_SERIAL_PORT} -b 9600 ",
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Flash",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Flash with Arduino bootloader"
            ],
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build, Flash and Monitor",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Flash with Arduino bootloader",
                "Serial monitor"
            ],
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "QEMU serial terminal in external window",
            "type": "shell",
            "command": "osascript -e 'tell app \"Terminal\" to do script \"telnet localhost 5678\"'",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "QEMU serial terminal",
            "type": "shell",
            "command": "telnet localhost 5678",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild and open terminal",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build For Debug"
            ],
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Unit test -- Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/unit_test"
            },
            "group": "build",
            "command": "make",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ],
                "pattern": {
                    "regexp": "^([^:]*):([0-9]*):([0-9]*):(.warning|.error):(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Unit test -- Build and Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/unit_test"
            },
            "group": "build",
            "command": "make && ./build/testrunner",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ],
                "pattern": {
                    "regexp": "^([^:]*):([0-9]*):([0-9]*):(.warning|.error):(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}