{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Echo vars",
            "command": "echo",
            "args": [
                "${env:USERNAME}",
                "workspaceFolder = ${workspaceFolder}",
                "arduino_avr_path = ${env:AVR_BASE_SOURCE}"
            ],
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Build ESP32",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--output-dir",
                "${workspaceFolder}/build",
                "-b",
                "esp32:esp32:pico32",
                "--warnings",
                "all",
                "-v"
            ],
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild all ESP32",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--output-dir",
                "${workspaceFolder}/build",
                "-b",
                "esp32:esp32:pico32",
                "--warnings",
                "all",
                "--clean"
            ],
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Upload ESP32",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "upload",
                "--input-dir",
                "${workspaceFolder}/build",
                "-p",
                "${config:ARDUINO_SERIAL_PORT}",
                "-b",
                "esp32:esp32:pico32",
                "-v"
            ],
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build, Flash and Monitor ESP32",
            "type": "shell",
           "dependsOrder": "sequence",
           "dependsOn":[
               "Build ESP32",
               "Upload ESP32",
               "Serial monitor"
           ],
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "QEMU serial terminal in external window",
            "type": "shell",
            "command": "osascript -e 'tell app \"Terminal\" to do script \"telnet localhost 5678\"'",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "QEMU serial terminal",
            "type": "shell",
            "command": "telnet localhost 5678",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild and open terminal",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build For Debug"
            ],
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}